    "styled-components": "^3.0.2",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/enzyme": "^3.1.8",
    "@types/express": "^4.11.0",
    "@types/jest": "^22.1.0",
    "@types/multer": "^1.3.6",
    "@types/node": "^9.4.0",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.35",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.5",
    "@types/sequelize": "^4.27.10",
    "autoprefixer": "7.1.6",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "concurrently": "^3.5.1",
    "css-loader": "0.28.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "0.11.2",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "2.29.0",
    "jest": "^22.1.4",
    "jsdom": "^11.6.2",
    "jsdom-global": "^3.0.2",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react-dev-utils": "4.2.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "^20.0.7",
    "ts-loader": "^2.3.7",
    "tsc-resolve": "^1.0.6",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^5.7.0",
    "tslint-react": "^3.2.0",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "dev:client": "node scripts/start.js",
    "build:clean": "rm -rf build",
    "build:client": "node scripts/build.js",
    "build:server": "tsc -p server && tsc-resolve -p server",
    "run:server": "node build/index.js",
    "dev:server": "yarn build:clean ; yarn build:server && cp -R public build/assets && yarn run:server",
    "dev": "concurrently \"yarn dev:client\" \"PORT=1337 yarn dev:server\"",
    "local:start": "yarn build:clean ; yarn build:client && yarn build:server && yarn run:server",
    "test": "node scripts/test.js --env=jsdom",
    "heroku-postbuild": "yarn build:clean ; yarn build:client && yarn build:server",
    "start": "yarn run:server"
  },
  "jest": {
    "collectCoverageFrom": [
      "client/**/*.{js,jsx,ts,tsx}",
      "server/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/client/**/?(*.)(spec|test).ts?(x)",
      "<rootDir>/server/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "modulePaths": [
      "<rootDir>/client/",
      "<rootDir>/server/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "proxy": "http://0.0.0.0:1337"
}
